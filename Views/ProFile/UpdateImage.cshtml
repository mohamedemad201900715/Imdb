@model imdb.Models.User

@{
    ViewBag.Title = "UpdateImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateImage</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
      
        <div class="form-group">
            @Html.LabelFor(model => model.Photo_user, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" name="photo" type="file" id="photo">
                @Html.EditorFor(model => model.Photo_user, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Photo_user, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
